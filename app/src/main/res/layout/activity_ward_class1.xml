<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ward_class1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/aclonica"
        android:text="1st Class Ward"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/aclonica"
        android:text="Ward 1A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageButton
        android:id="@+id/imgBtn_Ward1A_Bed1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/imgBtn_Ward1A_Bed2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/bed" />

    <ImageButton
        android:id="@+id/imgBtn_Ward1A_Bed2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtn_Ward1A_Bed1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_Ward1A_Bed1"
        app:layout_constraintTop_toTopOf="@+id/imgBtn_Ward1A_Bed1"
        app:srcCompat="@drawable/bed" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed 1"
        app:layout_constraintEnd_toEndOf="@+id/status_c1_b1"
        app:layout_constraintStart_toStartOf="@+id/status_c1_b1"
        app:layout_constraintTop_toBottomOf="@+id/status_c1_b1" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed 2"
        app:layout_constraintEnd_toEndOf="@+id/status_c1_b2"
        app:layout_constraintStart_toStartOf="@+id/status_c1_b2"
        app:layout_constraintTop_toBottomOf="@+id/status_c1_b2" />

    <TextView
        android:id="@+id/status_c1_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="@+id/imgBtn_Ward1A_Bed1"
        app:layout_constraintStart_toStartOf="@+id/imgBtn_Ward1A_Bed1"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_Ward1A_Bed1" />

    <TextView
        android:id="@+id/status_c1_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="@+id/imgBtn_Ward1A_Bed2"
        app:layout_constraintStart_toStartOf="@+id/imgBtn_Ward1A_Bed2"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_Ward1A_Bed2" />

</android.support.constraint.ConstraintLayout>